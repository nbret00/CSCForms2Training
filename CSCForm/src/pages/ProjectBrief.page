<apex:page standardController="Milestone1_Project__c" extensions="ProjectBriefController" id="pg" title="Project Creative Brief">
  <style>
    .container {
      width: 100%;
    }
    .label {
      width: 15%;
      background-color: #D9D9D9;
      font-weight: bold;
      vertical-align: middle !important;
    }
    
    .data {
      width: 35%;
      vertical-align: middle;
    }
    
    .checkboxColumn label {
      font-weight:bold; 
    }
    
    .backgroundHeader {
      background-color: #D9D9D9;
    }
    
    .backgroundLabel {
      font-weight: bold;
      width: 25%;
      vertical-align: middle !important;
    }
    .backgroundData {
      vertical-align: middle;
    }
    
    .labelClass {
      font-weight: bold;
      vertical-align: middle !important;
    }
    
    textarea {
      width: 99%;
    }
    
    
