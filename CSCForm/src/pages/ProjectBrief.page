               <apex:outputField value="{!projectRecord.Name}" />
             </td>
             <td class="label">Project Level</td>
             <td class="data checkboxColumn"> 
               <apex:selectCheckboxes value="{!projectRecord.recordType.Name}" layout="lineDirection" disabled="true">
