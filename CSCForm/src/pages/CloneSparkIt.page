<apex:page standardController="Milestone1_Project__c" extensions="CloneSparkItController" sideBar="false" showHeader="false">
	<apex:sectionHeader title="Clone Program"/>
	<apex:form >
		<apex:pageBlock >
			<apex:pageBlockButtons >
				<apex:commandButton action="{!cloneSparkIt}" value="Clone"/>
			</apex:pageBlockButtons>

			<apex:pageBlockSection columns="1">
				<apex:inputField value="{!sparkIt.Name}" />
				<apex:pageBlockSectionItem >
					<apex:outputLabel value="Clone Milestones" />
					<apex:inputCheckbox value="{!isToCreateMilestones}" />
				</apex:pageBlockSectionItem>

				<apex:pageBlockSectionItem >
					<apex:outputLabel value="Clone Milestone Tasks" />
					<apex:inputCheckbox value="{!isToCreateTasks}" />
				</apex:pageBlockSectionItem>
			</apex:pageBlockSection>
		</apex:pageBlock>
	</apex:form>
</apex:page>